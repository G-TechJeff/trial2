<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/e4b18cc1721f6b6d371a4f81d1b24c74"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="010dp"
        android:layout_marginEnd="190dp"
        android:alpha="0.7"
        android:background="@color/back1"
        android:gravity="center"
        android:text="EBENEZA"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="190dp"
        android:text="Fiber"
        android:background="@color/back1"
        android:alpha="0.7"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:textColor="@color/white"
        android:background="@color/back1"
        android:alpha="0.7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="189dp"
        android:text="LOGIN"
        android:textStyle="bold"
        />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="500dp">

            <EditText
                android:id="@+id/editTextaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#30ffffff"
                android:drawableRight="@drawable/baseline_switch_account_24"

                android:ems="10"
                android:hint="Enter Account number"
                android:inputType="textPassword"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/baseline_switch_account_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:textStyle="normal" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
